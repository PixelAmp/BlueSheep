<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="BlueSheep.LoginPage"
    NavigationPage.HasNavigationBar ="false">

    <ContentPage.Content>
        <ScrollView>
        <StackLayout Style="{StaticResource StackLayoutStyle}" >
            
            <Label
                Margin="0,30, 0, -10"
                x:Name="TitleText"
                Text="Blue Sheep Mobile"
                TextColor="Black"
                HorizontalTextAlignment="Center"
                Font="Lobster-Regular.ttf#Lobster-Regular"
                FontSize="60"
                />

            <Entry
                x:Name="Username_Entry"
                Placeholder="UserName"
                Style="{StaticResource EntryBoxStyle}"
                />

            <Entry
                x:Name="Password_Entry"
                Placeholder="Password"
                IsPassword="True"
                Style="{StaticResource EntryBoxStyle}"
                />

            <Button
                x:Name="LoginButton"
                Text ="Login"
                Clicked="Login_Clicked"
                Style="{StaticResource ClickableTextButtonStyle}"
                HorizontalOptions="Center"
                />

            <StackLayout
                Orientation="Horizontal"
                Margin="20,10,20,0">
                
                <Button
                    Text="Forgot Password?"
                    Style="{StaticResource ClickableTextButtonStyle}"
                    Clicked="ForgotPassword_Clicked"/>

                <Button
                    Text="Create Account"
                    Style="{StaticResource ClickableTextButtonStyle}"
                    Clicked="NewAccount_Clicked"/>
            </StackLayout>

            <Button
                    Text="Login without a password"
                    Style="{StaticResource ClickableTextButtonStyle}"
                    Clicked="Bypass_Login"/>

            <Image
                Margin="0,20"
                Source="BlueSheep.png"
                HorizontalOptions="Center"
                HeightRequest="200"
                WidthRequest="200"
                    />
        </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>