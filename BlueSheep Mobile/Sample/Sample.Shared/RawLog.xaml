<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BlueSheep.RawLog">
    
    <ContentPage.Content>
        <ScrollView BackgroundColor="LightSkyBlue">
            <StackLayout>
                <Label 
                    x:Name="welcomeLabel"
                    Text="Welcome to the Log File! It's a bit messy now, but our sever can sort through this and make it pretty" 
                    HorizontalOptions="Center" 
                    HorizontalTextAlignment="Center"
                    TextColor="Black"
                />

                <Label
                    x:Name="SensorNameLabel"
                    Text="Log of"
                    HorizontalOptions="Center"
                    TextColor="Black"
                 />
                <Label
                    x:Name="LogLabel"
                    />

            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>